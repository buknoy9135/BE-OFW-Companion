<div class="conversion-result">
  <h2>Conversion Result</h2>
  
  <div class="result">
    <p class="lead">
      <strong><%= number_with_precision(@original_amount, precision: 2) %> <%= @from_currency %></strong>
      equals
      <strong><%= number_with_precision(@converted_amount, precision: 2) %> <%= @to_currency %></strong>
    </p>
  </div>
  
  <%= link_to "Convert Another", currency_converter_path, class: "btn btn-secondary" %>
</div>