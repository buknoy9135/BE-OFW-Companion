<div >
  <!-- Digital Clock -->
  <div class="flex flex-col items-center justify-center space-y-2">
    <h2 class="text-lg font-semibold text-gray-800 tracking-widest">PHILIPPINE TIME</h2>
    <div id="ph-time" class="text-3xl md:text-5xl font-mono text-green-600 tracking-widest drop-shadow-[0_0_6px_rgba(34,197,94,0.7)]">
      12:00:00 AM
    </div>
    <p id="ph-date" class="text-sm md:text-base font-mono text-gray-600 tracking-wide"></p>
  </div>
</div>

<script>
  function updatePhilippineTime() {
    const phTimeEl = document.getElementById("ph-time");
    const phDateEl = document.getElementById("ph-date");
    if (!phTimeEl || !phDateEl) return;

    const now = new Date();
    const phTime = new Date(now.toLocaleString("en-US", { timeZone: "Asia/Manila" }));

    let hours = phTime.getHours();
    const minutes = phTime.getMinutes().toString().padStart(2, '0');
    const seconds = phTime.getSeconds().toString().padStart(2, '0');
    const ampm = hours >= 12 ? 'PM' : 'AM';

    hours = hours % 12;
    hours = hours ? hours : 12; // handle midnight
    const hourStr = hours.toString().padStart(2, '0');

    phTimeEl.textContent = `${hourStr}:${minutes}:${seconds} ${ampm}`;

    const options = { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' };
    phDateEl.textContent = phTime.toLocaleDateString('en-US', options);
  }

  updatePhilippineTime();
  setInterval(updatePhilippineTime, 1000);
</script>




