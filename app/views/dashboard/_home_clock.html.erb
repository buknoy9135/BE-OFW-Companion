<div class="flex flex-col items-center justify-center w-full h-full rounded-lg border border-gray-200 bg-gradient-to-b from-gray-50 to-white shadow-sm p-4">
  <!-- Header -->
  <h2 class="lg:text-lg xl:text-xl 
           font-semibold text-gray-700 tracking-wide mb-3 flex items-center gap-1">
    ðŸ•’ Philippines Time
  </h2>

  <!-- Time -->
  <div id="ph-time" class="text-3xl md:text-4xl font-mono text-blue-600 tracking-widest drop-shadow-[0_0_8px_rgba(37,99,235,0.5)]">
    12:00 AM
  </div>

  <!-- Date -->
  <p id="ph-date" class="text-xs md:text-sm font-mono text-gray-500 tracking-wide mt-2"></p>
</div>

<script>
  function updatePhilippineTime() {
    const phTimeEl = document.getElementById("ph-time");
    const phDateEl = document.getElementById("ph-date");
    if (!phTimeEl || !phDateEl) return;

    const now = new Date();
    const phTime = new Date(now.toLocaleString("en-US", { timeZone: "Asia/Manila" }));

    let hours = phTime.getHours();
    const minutes = phTime.getMinutes().toString().padStart(2, '0');
    const ampm = hours >= 12 ? 'PM' : 'AM';
    hours = hours % 12 || 12;

    phTimeEl.textContent = `${hours}:${minutes} ${ampm}`;
    const options = { weekday: 'short', day: '2-digit', month: 'short' };
    phDateEl.textContent = phTime.toLocaleDateString('en-US', options);
  }

  updatePhilippineTime();
  setInterval(updatePhilippineTime, 1000);
</script>
