<div class="flex-1 p-4 lg:ml-64 min-h-dvh bg-gray-50 flex flex-col items-center justify-center">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold mb-4 text-center">Edit Package Name</h1>

    <%= form_with model: @package, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :package_name, "Package Name", class: "block mb-1 font-medium" %>
        <%= f.text_field :package_name, 
              value: @package.package_name.presence || "#{@package.courier_name} package", 
              class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
        <% if @package.errors[:package_name].any? %>
          <p class="text-red-600 mt-1"><%= @package.errors[:package_name].first %></p>
        <% end %>
      </div>

      <div class="flex justify-between items-center">
        <%= f.submit "Save", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
        <%= link_to "Cancel", packages_path, 
              class: "bg-gray-200 px-4 py-2 rounded hover:bg-gray-300" %>
      </div>
    <% end %>
  </div>
</div>
