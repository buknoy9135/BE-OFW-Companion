<!-- Main Content -->
<div class="flex-1 p-6 md:p-10 lg:ml-64 min-h-dvh space-y-6 bg-gray-50">
  <div class="flex flex-row gap-4 justify-between items-center">
    <!-- Remittance Center Header -->
    <%= render 'shared/page_header', title: 'Remittance Centers' %>

    <div class="gap-2 <%= @remittance_centers.any? ? 'flex' : 'hidden' %>">
      <!-- Refresh Button -->
      <%= button_to refresh_remittance_centers_path, method: :patch, data: { turbo: false }, class: "inline-flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 md:text-sm text-xs shadow" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="md:h-5 md:w-5 h-4 w-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
        Refresh
      <% end %>

      <!-- Link to Search Nearby Remittance Centers -->
      <%= link_to places_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 md:text-sm text-xs shadow" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="md:h-5 md:w-5 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add
      <% end %>
    </div>
  </div>

  <!-- Saved Remittance Centers -->
  <%= render "remittance_centers" %>

  <!-- Modal Frame -->
  <%= turbo_frame_tag "remittance_center_modal" do %>
    <div data-turbo-permanent style="display: none;"></div>
  <% end %>
</div>